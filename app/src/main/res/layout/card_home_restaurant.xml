<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp">

    <ImageView
        android:id="@+id/iv_home_restaurant"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:src="@mipmap/ic_launcher_round">

    </ImageView>
    
    <TextView
        android:id="@+id/tv_restaurantName_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginVertical="50dp"
        android:paddingLeft="10dp"
        android:text="The Burger King"
        android:textSize="22dp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/tv_cuisine_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginVertical="30dp"
        android:paddingLeft="10dp"
        android:text="Cuisine"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/orange_Theme">
    </TextView>

    <RatingBar
        android:id="@+id/price_bar"
        style="@style/CustomRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="10dp"
        android:isIndicator="true"
        android:rating="4"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:theme="@style/CustomRatingBar2"
        app:layout_collapseMode="parallax" />


    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/rb_ratingBarHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_gravity="bottom"
        android:progressTint="@color/starYellow2"
        android:rating="4"
        android:numStars="5"
        android:layout_margin="10dp">

    </androidx.appcompat.widget.AppCompatRatingBar>

</androidx.cardview.widget.CardView>